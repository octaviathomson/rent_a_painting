<div class="info">
<div class="row justify-content-center">
  <h1>Find the right painting for you.</h1>
</div>

<div class="search-bar">
  <%= form_tag paintings_path, method: :get, class: "d-flex align-items-center" do %>
    <%= text_field_tag :query,
    params[:query],
    class: "form-control index-page-search",
    placeholder: "Search by artist or location"
    %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>
</div>
</div>
<!-- <div class="container mt-3 mb-5"> -->

  <div class="card-container d-flex justify-content-around w-60 m-auto">



        <div class="cards">
        <% @paintings.each do |painting| %>
          <div class="card-product">
            <div class="card-product-infos">
              <div>
                <% if painting.photo.attached? %>
                  <div class="image-display"><%= cl_image_tag(painting.photo.key,
                    width: 400, height: 300, crop: :fill) %></div>
                  <% end %>
                  <div class="row justify-content-center">
                    <h6><%= painting.name %></h6>
                  </div>
                  <p><%= painting.description %></p>
                  <em><p><%= painting.address %></p></em>
                  <h6> Â£<%= painting.price %> /per day</h6>
              </div>
            </div>
                <%= link_to 'More details', painting_path(painting), class: "btn btn-dark"%>
        </div>
         <% end %>
        </div>
        <div style="position: relative; width: 350;"></div>
  <div id="map"
     style="width: 300px; height: 400px; margin-top: 20px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>

</div>

<!-- </div> -->


<div class="row justify-content-center">
  <%= link_to 'Back', paintings_path %>
</div>



